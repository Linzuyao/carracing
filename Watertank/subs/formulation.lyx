\begin_layout Standard
the dynamics of the cart along the 
\begin_inset Formula $x$
\end_inset

-axis
\begin_inset Formula 
\begin{equation}
M\ddot{x}+b\dot{x}+N=F\label{eq:cart_x}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
the dynamics of the pole along the 
\begin_inset Formula $x$
\end_inset

-axis
\begin_inset Formula 
\begin{eqnarray}
N & = & m\frac{d^{2}}{dt}(x+l\sin\theta)\nonumber \\
 & = & m\frac{d}{dt}(\dot{x}+l\cos\theta\dot{\theta})\nonumber \\
 & = & m(\ddot{x}-l\sin\theta\dot{\theta}^{2}+l\cos\theta\ddot{\theta})\label{eq:pole_x}
\end{eqnarray}

\end_inset


\end_layout

\begin_layout Standard
the dynamics of the pole along the 
\begin_inset Formula $y$
\end_inset

-axis
\begin_inset Formula 
\begin{eqnarray}
P & = & mg+m\frac{d^{2}}{dt}(l\cos\theta)\nonumber \\
 & = & mg-m\frac{d}{dt}(l\sin\theta\dot{\theta})\nonumber \\
 & = & mg-m(l\cos\theta\dot{\theta}^{2}+l\sin\theta\ddot{\theta})\label{eq:pole_y}
\end{eqnarray}

\end_inset


\end_layout

\begin_layout Standard
The rotation dynamics is 
\begin_inset Formula 
\begin{equation}
-Pl\sin\theta-Nl\cos\theta=I\ddot{\theta}\label{eq:pole_rotation}
\end{equation}

\end_inset

Submitting 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:pole_x"

\end_inset

 into 
\begin_inset CommandInset ref
LatexCommand pageref
reference "eq:cart_x"
plural "false"
caps "false"
noprefix "false"

\end_inset

 obtains
\begin_inset Formula 
\[
M\ddot{x}+b\dot{x}+m(\ddot{x}-l\sin\theta\dot{\theta}^{2}+l\cos\theta\ddot{\theta})=F
\]

\end_inset

or 
\begin_inset Formula 
\begin{equation}
\left[\begin{array}{cc}
M+m & ml\cos\theta\end{array}\right]\left[\begin{array}{c}
\ddot{x}\\
\ddot{\theta}
\end{array}\right]+b\dot{x}-ml\sin\theta\dot{\theta}^{2}=F.\label{eq:a}
\end{equation}

\end_inset

Submitting 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:pole_x"

\end_inset

 and 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:pole_y"

\end_inset

 into 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:pole_rotation"
plural "false"
caps "false"
noprefix "false"

\end_inset

 obtains
\begin_inset Formula 
\[
-[g-l\cos\theta\dot{\theta}^{2}-l\sin\theta\ddot{\theta})]ml\sin\theta-[(\ddot{x}-l\sin\theta\dot{\theta}^{2}+l\cos\theta\ddot{\theta})]ml\cos\theta=I\ddot{\theta}
\]

\end_inset

or
\begin_inset Formula 
\begin{equation}
[\frac{I}{ml}-l(\sin\theta)^{2}+l(\cos\theta)^{2}]\ddot{\theta}+\ddot{x}\cos\theta+g\sin\theta-2l\cos\theta\sin\theta\dot{\theta}^{2}=0\label{eq:b}
\end{equation}

\end_inset


\begin_inset CommandInset ref
